<html>
  <head>
    <title><%= title %></title>
    <meta name="description" content="Ethan Eldridge's personal website"/>
	<meta name="keywords" content="Ethan,Eldridge,Joachim,Programming"/>
	<meta charset=utf-8 />
	<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

    <link rel='stylesheet' href='/main.css' />
    <script src="/js/app.js"></script>
    <meta name="description" content="<%= description %>" />
  </head>
  <body>
  	<%- partial("../_partials/_header") %>
    <%- yield %>
    <%
    var articles = [] 

    for(var slug in public.blog._data){ 
      public.blog._data[slug].slug = slug
      articles.push(public.blog._data[slug])
    };

    var prevP = false
    var nextP = false
    for ( var i = articles.length - 1; i >= 0; i--) {
      var article = articles[i]
      if( article.slug == current.source ){
        nextP = articles[i+1]
        prevP = articles[i-1]
      }
    };  %>

  <% if (prevP) { %>
      <a class="floatleft" href=<%= prevP.slug %>><%= prevP.title %></a>
  <% } %>

  <% if (nextP) { %>
      <a class="floatright" href=<%= nextP.slug %>><%= nextP.title %></a>
  <% } %>
    <div id="footer">
      <p>Copyright (c) Ethan Eldridge</p>
    </div>
  </body>
</html>